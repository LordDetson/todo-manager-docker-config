#!/bin/bash
if [ -n "$1" ]
then
  sonar-token=$1
  if [ -n "$2" ]
  then
    jadmin=$2
    if [ -n "$3" ]
    then
      jpassword=$3
      if [ -n "$4" ]
      then
        docker-hub-username=$4
        if [ -n "$5" ]
        then
          docker-hub-password=$5
          docker run -d \
            -p 8080:8080 \
            -p 50000:50000 \
            --network sonarnet \
            -e JENKINS_ADMIN_LOGIN=$jadmin \
            -e JENKINS_ADMIN_PASSWORD=$jpassword \
            -e SONAR_QUBE_TOKEN=$sonar-token \
            -e DOCKER_HUB_USERNAME=$docker-hub-username \
            -e DOCKER_HUB_PASSWORD=$docker-hub-password \
            --name jenkins \
            todo-manager/jenkins
        else
          echo "Docker Hub password is a required parameter"
        fi
      else
        echo "Docker Hub username is a required parameter"
      fi
    else
      echo "Jenkins password is a required parameter"
    fi
  else
    echo "Jenkins username is a required parameter"
  fi
else
echo "Sonar token is a required parameter"
fi
